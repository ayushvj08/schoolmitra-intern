<main class="container mx-auto border mt-4 mb-2" style="max-width:400px;">

<h2 style="text-align:center;" class="border-bottom pb-2">Forgot your password?</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field form-group">
    <%= f.label :email, class: "form-label" %><br />
    <%= f.email_field :email, autofocus: true, class: "form-control", autocomplete: "email" %>
  </div>

  <div class="actions form-group">
    <%= f.submit "Send me reset password instructions", class: "mt-3 mb-2 form-control btn btn-primary" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>

</main>