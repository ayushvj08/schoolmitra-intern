<main class="container mx-auto border mt-4 mb-2" style="max-width:400px;">

<h2 style="text-align:center;" class="border-bottom pb-2">Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field form-group">
    <%= f.label :email, class: "form-label" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
  </div>

  <div class="field form-group">
    <%= f.label :password, class: "form-label" %><br />
    <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field form-group">
      <%= f.check_box :remember_me, class: "form-check-input" %>
      <%= f.label :remember_me, class: "form-label" %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Log in", class: "form-control btn btn-primary" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>

</main>