<main class="container mx-auto border m-3" style="max-width:500px;">

<h4 style="text-align:center;" class="border-bottom p-2">
Fill the details correctly to Generate Certificate!</h4>

<section >
 
<%= form_with(model: @student, url: @url) do |form| %>

    <div class="form-group">  
        <p class="form-label">Name <span>*</span> </p>
        <%= form.text_field :name, class: "mb-2 form-control" %>
    </div>

        <%= form.fields_for(@parent) do |f| %>
    <div class="form-group">  
        <p class="form-label">Father Name <span>*</span> </p>
        <%= f.text_field :father_name, class: "mb-2 form-control" %>
    </div>    
    <div class="form-group">  
        <p class="form-label">Mother Name <span>*</span> </p>
        <%= f.text_field :mother_name, class: "mb-2 form-control" %>
    </div>   
    <% end %>
    <div class="form-group">  
        <p class="form-label">Standard <span>*</span> </p>
        <%= form.text_field :standard, class: "mb-2 form-control" %>
    </div>
    <div class="form-group">  
        <p class="form-label">Section <span>*</span> </p>
        <%= form.text_field :section, class: "mb-2 form-control" %>
    </div>
    <div class="form-group">  
        <p class="form-label">Date Of Birth <span>*</span> </p>
        <%= form.date_field :date_of_birth, required: "required", class: "mb-2 form-control" %>
    </div>    
    <div class="form-group">  
        <p class="form-label">Admission Number <span>*</span> </p>
        <%= form.text_field :admission_number, class: "mb-2 form-control" %>
    </div>
    <div class="form-group">
        <%= form.submit class: "mb-2 form-control btn btn-primary" %>
    </div>
<% end %>

</section>


</main>